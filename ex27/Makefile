NAME=ft_display_file
SRCS=srcs
INCLUDES=includes

all:
	gcc -Wall -Werror -Wextra $(SRCS)/*.c -I $(INCLUDES) -o $(NAME)

clean:
	rm -f ./*.o

fclean:
	rm -f $(NAME)
